{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [{ "name": "next" }],

    "paths": {
      "@/*": ["./src/*"],

      "@scottish-government/designsystem-react/dist/*": [
        "node_modules/@scottish-government/designsystem-react/src/*"
      ],
      "@scottish-government/designsystem-react": [
        "node_modules/@scottish-government/designsystem-react/src/index"
      ]
    },

    "typeRoots": ["./node_modules/@types", "./src/types"]
  },

  "files": ["src/types/sgds-ambient.generated.d.ts"],

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
